    "version": "0.2.0",
    "configurations": [
        {
            "name": "[Transpile] TSNode",
            "request": "launch",
            "internalConsoleOptions": "openOnSessionStart",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "runtimeArgs": [
                "-r",  
                "ts-node/register/transpile-only"
            ],
            "args": [
                "${file}",
                "--project ${workspaceFolder}/tsconfig.json",
                "--ignore ['${cwd}/node_modules', '${workspaceFolder/node_modules}']"
            ],
            "type": "pwa-node"
        },
        {
            "name": "[Compile] Kayser",
            "request": "launch",
            "internalConsoleOptions": "openOnSessionStart",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "runtimeArgs": [
                "-r",  
                "ts-node/register/transpile-only"
            ],
            "args": [
                "${file}",
                "--project ${workspaceFolder}/tsconfig.json",
                "--ignore ['${cwd}/node_modules', '${workspaceFolder/node_modules}']"
            ],
            "type": "pwa-node"
        },
    ]
}