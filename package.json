{
  "git": "https://github.com/ragestudio/nodecore",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "postinstall": "npm run initBuilder",
    "initBuilder": "cd ./packages/builder && npm i && yarn build && cd ../../ && yarn run builder",
    "local": "LOCAL_BIN=true node ./packages/cli/dist",
    "builder": "node ./packages/builder/dist/cli.js",
    "build:docs": "nodecore docs --innerFiles",
    "release": "nodecore publish --npm --github",
    "build": "nodecore build",
    "link:main": "cd packages/nodecorejs && yarn link && cd -",
    "update:deps": "yarn upgrade-interactive --latest",
    "prettier": "prettier --write '**/*.{js,jsx,tsx,ts,less,md,json}'"
  },
  "lint-staged": {
    "*.{js,jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "dependencies": {
    "@babel/cli": "^7.12.1",
    "@babel/core": "^7.12.9",
    "@babel/node": "^7.12.1",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-proposal-do-expressions": "^7.12.1",
    "@babel/plugin-proposal-export-default-from": "^7.12.1",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.12.0",
    "@babel/plugin-proposal-optional-chaining": "^7.12.0",
    "@babel/plugin-proposal-private-methods": "^7.10.4",
    "@babel/plugin-syntax-bigint": "^7.8.3",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-typescript": "^7.12.7",
    "@types/babel__core": "7.1.12",
    "@types/babel__traverse": "7.0.16",
    "@types/jest": "^26.0.4",
    "@types/node": "^14.14.10",
    "rimraf": "^3.0.2"
  }
}
